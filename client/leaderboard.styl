body 
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-weight 200
  margin 50px 0
  padding 0
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -o-user-select none
  user-select none

#outer 
  width 600px
  margin 0 auto    


.leaderboard .container 
  border-radius 15px
  border solid 1px black
  width 470px
  padding-left 15px
  padding-right 15px
  padding-top 17px
  padding-bottom 17px

.leaderboard .title 
  font-size 30px
  font-weight bold
  margin-bottom 40px
  text-align center

.leaderboard .input
 margin-top 25px
 text-align center
 font-size 18px

.leaderboard .instruct 
  margin-top 25px
  text-align center
  font-size 18px

.leaderboard .reset 
  margin-top 25px
  text-align center

.player 
  cursor pointer
  padding 15px
  border-radius 15px

.player .name 
  display inline-block
  width 300px
  font-size 1.75em
  vertical-align middle

.player .score 
  display inline-block
  width 100px
  text-align right
  font-size 2em
  font-weight bold
  color #777
  vertical-align middle

.player .love img  
  padding-left 7px
  vertical-align middle

.player.selected 
  background-color yellow

.player.selected .score 
  color black

.details, .none 
  font-weight bold
  font-size 2em
  border-style dashed none none none
  border-color #ccc
  border-width 4px
  margin 50px 10px
  padding 10px 0px

.none 
  color #777

.inc 
  cursor pointer

