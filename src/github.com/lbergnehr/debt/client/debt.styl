
debug-border(color = red)
	border 1px solid color

frontColor = lightblue
hoverColor = blue
dragBorderColor = purple
offBlackText = lighten(black, 20%)

borderThickness = 2px

*
	font-family Georgia 

horizontal-center
	margin-left auto
	margin-right auto

.front-panel 
	background-color frontColor

#home  
	@extends .front-panel
	margin-top 10em
	margin-left auto
	margin-right auto
	padding 3em
	max-width 20em 

.participants
	position relative
	
.participant-group
	// border 2px dashed lightblue
	margin-top 10px
	border-radius 10px
	position relative

participantBorderSize = 2px
.participant
	position absolute
	color darkgray
	border participantBorderSize dashed transparent

separatorPadding = 7px
.participant-inner
	padding-right separatorPadding
	// border-right 1px dashed lightgray
	float left
	text-align center
	img
		border 1px solid darkgray
		width 82px
		height 82px

.participant-debts
	float right
	color offBlackText
	ul
		margin-left separatorPadding
		list-style-type none
		padding 0px
		li
			margin 0px
			padding 0px

.drag-over
	border participantBorderSize dashed lightblue

#add-debt-container
	z-index 100
	width 100%
	height 100%
	position absolute
	form
		border 2px solid lightblue
		border-radius 10px
		margin-left auto
		margin-right auto
		width 300px
		padding 15px

#debts
	margin-top 10px

.debt
	position relative
	.remove-button
		position absolute
		right 5px
		top 5px
		visibility hidden
	&:hover
		.remove-button
			visibility visible

.debt-avatars
	img
		width 32px
		height 32px

hidden-textarea()
	default-textarea(0)
default-textarea(opacity = 0.075)
	if opacity > 0
		border-color #cccccc
	else
		border-color transparent
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, opacity);
	-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, opacity);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, opacity);

textarea.editable
	hidden-textarea()
	overflow auto
	resize none
	&:hover
		default-textarea()

h6
	text-transform uppercase
	margin-bottom 0px

.h3
	margin-top 10px
	font-family inherit
	font-size 3em
textarea.h3
	width auto
	padding 7px

.information
	offBlackText()
	text-align center
	font-size 16px




